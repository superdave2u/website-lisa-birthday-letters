---
import LandingLayout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import Proof from '~/components/widgets/Proof.astro';

import { YouTube } from 'astro-embed';

const metadata = {
  title: 'Attention: Friends and Loved Ones',
};
---

<LandingLayout metadata={metadata}>
  <Hero
    tagline="Attention: Friends and Loved Ones"
    actions={[
      {
        variant: 'primary',
        text: 'Record a Message Now',
        href: 'https://testimonial.to/words-for-lisa-s-soul',
        target: '_blank',
        icon: 'tabler:microphone-2',
      },
    ]}
  >
    <Fragment slot="title">
      We're Giving Lisa a <span class="text-accent dark:text-white highlight">Gift She'll Cherish Forever</span
      ></Fragment
    >

    <Fragment slot="subtitle">
      One that says, “I see you. I know you. <span class="font-semibold"></span>You matter.</Fragment
    ></Hero
  >
</LandingLayout>

