---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    /* Primary palette with soft romantic tones */
    --aw-color-primary: rgb(233, 150, 156); /* Warm blush pink */
    --aw-color-secondary: rgb(218, 112, 142); /* Muted rose */
    --aw-color-accent: rgb(206, 65, 94); /* Bold coral-raspberry */

    /* Text colors with high readability but softer contrast */
    --aw-color-text-heading: rgb(51, 37, 41); /* Deep warm brown */
    --aw-color-text-default: rgb(72, 53, 56); /* Muted warm charcoal */
    --aw-color-text-muted: rgb(72 53 56 / 66%); /* Muted version for secondary text */

    /* Background colors for warmth and calm */
    --aw-color-bg-page: rgb(255, 250, 248); /* Warm off-white with peach undertone */
    --aw-color-bg-page-dark: rgb(44, 33, 35); /* Deep warm brown for dark mode */

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'DM Sans';
    --aw-font-serif: 'DM Sans';
    --aw-font-heading: 'DM Sans';

    --aw-color-primary: rgb(1 97 239);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
